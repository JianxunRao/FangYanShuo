<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_my_story_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="2013/11/21"/>
    <TextView
        android:id="@+id/tv_my_story_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_my_story_time"
        android:maxLines="2"
        android:text="内容内容内容内容内容内容"/>
    <RelativeLayout
        android:id="@+id/rl_my_story_widgets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_my_story_name"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/tv_my_story_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorFallback"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_my_story_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/tv_my_story_comment_count"
            android:src="@drawable/iconfont_comment2"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_my_story_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/iv_my_story_comment"
            android:textColor="@color/colorFallback"
            android:text="赞/12"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_my_story_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/tv_my_story_like_count"
            android:src="@drawable/iconfont_thumb2"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_my_story_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/iconfont_delete"/>
</RelativeLayout>
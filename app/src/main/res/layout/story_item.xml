<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_user_logo"
                android:layout_marginLeft="8dp"
                android:text="name"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_story_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刚刚"
                android:textColor="@color/colorFallback"
                android:layout_below="@id/tv_user_name"
                android:layout_alignLeft="@id/tv_user_name"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_voice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryShallow"
            >
            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/speaker3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/tv_story_time_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18秒"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_story_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textSize="18sp"
            android:maxLines="10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_story_location"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconfont_location"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_story_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_story_location"
                android:textColor="@color/colorFallback"
                android:text="云南昆明"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_story_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="23"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorFallback"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_story_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/tv_story_comment_count"
                android:src="@drawable/iconfont_comment2"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_story_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_toLeftOf="@id/iv_story_comment"
                android:textColor="@color/colorFallback"
                android:text="赞/12"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_story_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/tv_story_like_count"
                android:src="@drawable/iconfont_thumb2"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
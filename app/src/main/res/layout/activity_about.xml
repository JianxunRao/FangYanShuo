<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_about_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/tv_about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_about_logo"
            android:text="方言说"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/tv_about_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_about_name"
            android:layout_toRightOf="@id/iv_about_logo"
            android:text="留住方言，记住家乡"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tv_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_about_slogan"
            android:layout_toRightOf="@id/iv_about_logo"
            android:text="版本号:1.1"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:text="@string/about"
        android:lineSpacingMultiplier="1.5"
        />

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/bt_about_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="了解更多"
        android:background="@color/colorPrimary"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"/>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/bt_about_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检查更新"
        android:background="@color/colorPrimary"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"/>

</LinearLayout>